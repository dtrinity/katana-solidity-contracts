{
  "printWidth": 140,
  "trailingComma": "all",
  "semi": true,
  "singleQuote": false,
  "tabWidth": 2,
  "arrowParens": "always",
  "bracketSpacing": true,
  "endOfLine": "lf",
  "plugins": ["prettier-plugin-solidity"],
  "overrides": [
    {
      "files": "*.sol",
      "options": {
        "tabWidth": 4,
        "printWidth": 120
      }
    }
  ]
}
