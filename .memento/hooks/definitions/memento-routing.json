{
  "version": "1.0.0",
  "hooks": [
    {
      "id": "memento-routing",
      "name": "Memento Routing Hook",
      "description": "Routes modes, workflows, and tickets based on user prompts",
      "event": "UserPromptSubmit",
      "enabled": true,
      "command": "./.memento/hooks/scripts/memento-routing.sh",
      "priority": 100,
      "requirements": {
        "commands": [
          "jq",
          "grep",
          "sed",
          "cat",
          "echo",
          "ls",
          "basename"
        ]
      }
    }
  ]
}