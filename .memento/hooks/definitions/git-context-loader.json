{
  "version": "1.0.0",
  "hooks": [
    {
      "id": "git-context-loader",
      "name": "Git Context Loader",
      "description": "Loads current git status on each user prompt",
      "event": "UserPromptSubmit",
      "enabled": true,
      "command": "./.memento/hooks/scripts/git-context-loader.sh",
      "continueOnError": true,
      "priority": 95,
      "requirements": {
        "commands": [
          "echo",
          "git",
          "head"
        ],
        "env": [],
        "files": []
      }
    }
  ]
}