pragma solidity ^0.8.20;

/**
 * @title IMorphoOracle
 * @notice Interface for Morpho oracle contracts
 * @dev This interface defines the minimal required functions for Morpho oracles
 */
interface IMorphoOracle {
  /**
   * @notice Returns the current price
   * @return The current price scaled by 1e36 as per Morpho Blue specification
   */
  function price() external view returns (uint256);
}
